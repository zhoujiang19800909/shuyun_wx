/**app.wxss**/
@import "./style/layout.wxss";

.container {
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}

page {
    background-color: #F2f2f2;
}

.box_row {
  display: -webkit-box;flex-direction: row;align-items: center;background-color: #ffffff;margin-bottom: 10rpx;
  -webkit-box-orient:horizontal;
}

.box_col {
  display: flex;flex-direction: column;align-items: center;background-color: #ffffff;
  margin-top: 40rpx;margin-bottom: 40rpx;-webkit-box-flex:1;
}
